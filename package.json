{
  "name": "gta-vertical-nav",
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/garytalmes/gta-vertical-nav"
  },
  "keywords": [],
  "author": "garytalmes",
  "bugs": {
    "url": "https://github.com/garytalmes/gta-vertical-nav/issues"
  },
  "homepage": "https://github.com/garytalmes/gta-vertical-nav#readme",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "react-hooks": "^1.0.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.4",
    "vite-plugin-linter": "^2.0.5",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "peerDependencies": {
    "react": "16.8.0 || >=17.x",
    "react-dom": "16.8.0 || >=17.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn  eslint",
      "yarn  format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/vertical-nav.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/vertical-nav.umd.js"
      }
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/vertical-nav.umd.js",
  "module": "./dist/vertical-nav.es.js",
  "types": "./dist/index.d.ts"
}
